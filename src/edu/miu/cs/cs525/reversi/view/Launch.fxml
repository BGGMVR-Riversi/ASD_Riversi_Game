<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<BorderPane
            prefHeight="500"
            style="-fx-background-color: darkslategray"
            prefWidth="300"
            xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.miu.cs.cs525.reversi.controller.LaunchController">
    <top>
        <ImageView fx:id="imageView" BorderPane.alignment="CENTER" fitWidth="350.0" fitHeight="200.0">
            <BorderPane.margin>
                <Insets top="15.0"></Insets>
            </BorderPane.margin>
        </ImageView>
    </top>
    <center>
        <BorderPane>
            <center>
                <Pane BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="btnNewGame" style="
                        -fx-text-fill: black;
                        -fx-font-size: 150%;
                        -fx-font-weight: bold;
                        -fx-border-color: lime;
                        -fx-border-style: double%;
                        -fx-background-color: aqua" prefWidth="200.0" prefHeight="40.0" layoutX="85.0" layoutY="40.0" BorderPane.alignment="CENTER" onAction="#btnNewGame" mnemonicParsing="false" text="New Game"></Button>
                        <Button fx:id="btnAbout" style="
                        -fx-text-fill: black;
                        -fx-font-size: 150%;
                        -fx-font-weight: bold;
                        -fx-border-color: lime;
                        -fx-border-style: double%;
                        -fx-background-color: aqua" prefWidth="200.0" prefHeight="40.0" layoutX="85.0" layoutY="100.0" BorderPane.alignment="CENTER" onAction="#btnAbout" mnemonicParsing="false" text="About"></Button>
                        <Button fx:id="btnRules" style="
                        -fx-text-fill: black;
                        -fx-font-size: 150%;
                        -fx-font-weight: bold;
                        -fx-border-color: lime;
                        -fx-border-style: double%;
                        -fx-background-color: aqua" prefWidth="200.0" prefHeight="40.0" layoutX="85.0" layoutY="160.0" BorderPane.alignment="CENTER" onAction="#btnRules" mnemonicParsing="false" text="Rules"></Button>
                    </children>
                </Pane>
            </center>
        </BorderPane>
    </center>
</BorderPane>